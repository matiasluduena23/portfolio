---
import ButtonI18 from "./ButtonI18.astro";
---

<div
	class="fixed bottom-0 left-0 right-0 bg-black py-4 z-50 border border-t-clstrongGreen"
>
	<div class="container max-w-[90%] mx-auto relative">
		<!-- Globe internationalization -->
		<div
			class="absolute -top-[49px] left-1/2 transform -translate-x-1/2 bg-clstrongGreen w-[50px] h-[33px] rounded-t-3xl"
		>
		</div>
		<div
			class="absolute -top-12 left-1/2 transform -translate-x-1/2 bg-black rounded-t-3xl p-2"
		>
			<ButtonI18 position={"top-popup"} />
		</div>
		<nav>
			<ul class="flex items-center justify-between gap-2 text-white">
				<li>
					<a
						href="#experience"
						class="relative after:bg-clstrongGreen after:absolute after:h-[1px] after:w-0 after:bottom-0 after:left-0 hover:after:w-full after:transition-all after:duration-300 cursor-pointer"
						>Experiencia</a
					>
				</li>
				<li>
					<a
						href="#projects"
						class="relative after:bg-clstrongGreen after:absolute after:h-[1px] after:w-0 after:bottom-0 after:left-0 hover:after:w-full after:transition-all after:duration-300 cursor-pointer"
						>Proyectos</a
					>
				</li>
				<li>
					<a
						href="#services"
						class="relative after:bg-clstrongGreen after:absolute after:h-[1px] after:w-0 after:bottom-0 after:left-0 hover:after:w-full after:transition-all after:duration-300 cursor-pointer"
						>Servicios</a
					>
				</li>
				<li>
					<a
						href="#about"
						class="relative after:bg-clstrongGreen after:absolute after:h-[1px] after:w-0 after:bottom-0 after:left-0 hover:after:w-full after:transition-all after:duration-300 cursor-pointer"
						>Acerca de</a
					>
				</li>
			</ul>
		</nav>
	</div>
</div>
