---
import englishCreative from '../assets/englishCreative.png';
import Arrow from '../assets/Arrow.astro';
import { Image } from 'astro:assets';
---

<section id="projects" class="my-[7rem]">
	<!-- ol version -->
	<div class="container mx-auto">
		<h1
			class="text-3xl font-semibold bg-gradient-to-r from-white to-[#999999] bg-clip-text text-transparent flex flex-col justify-center items-center my-12 text-center"
		>
			Projects
		</h1>

		<div class="grid w-[90%] md:w-full mx-auto md:grid-cols-2 gap-8">
			<!-- Project 1 -->
			<div
				class="border border-gray-400 pt-4 rounded-lg relative max-w-[600px] place-self-end"
			>
				<div class="flex items-center gap-1 absolute top-1 left-3">
					<span class="bg-gray-300 w-2 h-2 rounded-full"></span>
					<span class="bg-gray-300 w-2 h-2 rounded-full"></span>
					<span class="bg-gray-300 w-2 h-2 rounded-full"></span>
				</div>
				<Image
					src={englishCreative}
					alt={'english creative website screenshot'}
					class="rounded-t-lg px-1"
				/>
				<div class="bg-black p-4">
					<div class="flex justify-between">
						<div>
							<h2
								class="text-gray-200 font-semibold tracking-wide"
							>
								English Creative
							</h2>
							<p class="text-gray-400">Astro</p>
						</div>
						<div class="flex items-center gap-2">
							<a
								href="#"
								class="text-gray-200 border py-1 pl-4 rounded-md flex items-center gap-6"
							>
								<span>Code</span>
								<Arrow />
							</a>
							<a
								href="#"
								class="text-gray-200 border py-1 pl-4 rounded-md flex items-center gap-6"
							>
								<span>Live</span>
								<Arrow />
							</a>
						</div>
					</div>
				</div>
			</div>
			<!-- Project 2 -->
			<div
				class="border border-gray-400 pt-4 rounded-lg relative max-w-[600px]"
			>
				<div class="flex items-center gap-1 absolute top-1 left-3">
					<span class="bg-gray-300 w-2 h-2 rounded-full"></span>
					<span class="bg-gray-300 w-2 h-2 rounded-full"></span>
					<span class="bg-gray-300 w-2 h-2 rounded-full"></span>
				</div>
				<Image
					src={englishCreative}
					alt={'english creative website screenshot'}
					class="rounded-t-lg px-1"
				/>
				<div class="bg-black p-4">
					<div class="flex justify-between">
						<div>
							<h2
								class="text-gray-200 font-semibold tracking-wide"
							>
								English Creative
							</h2>
							<p class="text-gray-400">Astro</p>
						</div>
						<div class="flex items-center gap-2">
							<a
								href="#"
								class="text-gray-200 border py-1 pl-4 rounded-md flex items-center gap-6"
							>
								<span>Code</span>
								<Arrow />
							</a>
							<a
								href="#"
								class="text-gray-200 border py-1 pl-4 rounded-md flex items-center gap-6"
							>
								<span>Live</span>
								<Arrow />
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
